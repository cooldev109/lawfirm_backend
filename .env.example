# Server Configuration
NODE_ENV=development
PORT=3001
API_PREFIX=/api/v1

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lawyer_system
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# Email Configuration (SMTP) - Legacy
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM_NAME=Law Firm Case Management
EMAIL_FROM_ADDRESS=noreply@lawfirm.com

# Resend Email Configuration (Recommended for production)
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Law Firm Case Management

# Email Ingestion (IMAP)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=intake@lawfirm.com
IMAP_PASSWORD=your_app_password
IMAP_TLS=true

# Document Storage
STORAGE_PATH=./storage/documents
MAX_FILE_SIZE_MB=25

# Business Configuration
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=18
BUSINESS_TIMEZONE=America/New_York
INACTIVITY_DAYS_THRESHOLD=21

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
